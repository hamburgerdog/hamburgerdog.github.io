---
import BaseLayout from '../layouts/BaseLayout.astro';
import RoadmapIcon from '../assets/xjosiah-roadmap.svg';
---

<style>
  :root {
    --max-width: 760px;
  }
  nav {
    display: flex;
    gap: 16px;
  }

  .main {
    display: flex;
    justify-content: center;
  }

  .main img {
    width: 100%;
  }

  @media (max-width: 800px) {
    .main img {
      max-width: 95vw;
    }
  }
</style>

<BaseLayout title="技能树 Roadmap">
  <article class="main">
    <img src={RoadmapIcon.src} />
  </article>
</BaseLayout>
